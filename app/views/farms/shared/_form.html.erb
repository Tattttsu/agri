<div class="text-center">
  <div class="form">
    <%= form_with model: @farm, local: true do |f| %>
    <%= render "layouts/shared/error_messages",  object: f.object %>

    <div class= "field mt-5">
      <% f.label :name, class: "label dark" %>
      <%= f.text_field :name, autofocus: true, placeholder: "名前（必須）", class: "input w-50 p-3 mb-5" %>
    </div>

    <div class="field">
      <% f.label :address, class: "label" %>
      <%= f.text_field :address, autofocus: true, placeholder: "売っている場所（必須）", class: "input w-50 p-3 mb-5" %>
    </div>

    <div class="field">
      <% f.label :feature, class: "label" %>
      <%= f.text_area :feature, autofocus: true, placeholder: "特徴・説明", class: "input w-50 p-3 mb-5" %>
    </div>

    <div class="field">
      <%= f.label :image, "写真の選択", class: "label" %>
      <%= f.file_field :image, class: "input w-50 m-auto pb-5" %>
    </div>

    <%= f.label :vege_tag_ids, "売っている野菜", class: "label" %>
    <div class="row w-50 m-auto pt-4">
      <%= f.collection_check_boxes(:vege_tag_ids, VegeTag.all, :id, :name) do |tag| %>
      <div class='form-check col-md-4 col-sm-6'>
        <%= tag.label { tag.check_box + tag.text } %>
      </div>
    <% end %>
    </div>

    <div class="actions">
      <%= f.submit yield(:button_text), class: "btn btn-primary w-50 p-3" %>
    </div>
    <% end %>
  </div>
</div>
