<div class="row d-flex justify-content-center ">
  <% farms.each do |farm| %>
    <div class="col-auto">
      <div class="card mb-4 shadow-sm">
        <div class="bd-placeholder-img card-img-top">
          <%= link_to farm_path(farm.id) do %>
          <% if farm.image.present? %>
            <%= image_tag farm.image.url, class: "img-fluid" %>
          <% else %>
            <%= image_tag "/野菜.jpeg", class: "img-fluid" %>
          <% end %>
          <% end%>
        </div>
        <div class="card-body">
          <p class="card-text text-truncate">
            <h4><%= farm.name %></h4>
            <h5><%= farm.user.name %></h5>
          </p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to "詳細", farm_path(farm.id), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "編集", edit_farm_path(farm.id), class: "btn btn-sm btn-outline-secondary" if farm.user == current_user%>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
