<h2>新規作成</h2>

<%= form_with model: @farm do |f| %>
  <%= render "farms/shared/error_messages" %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class='form-group'>
    <%= f.collection_check_boxes(:vege_tag_ids, VegeTag.all, :id, :name) do |tag| %>
      <div class='form-check'>
        <%= tag.label class: 'form-check-label' do %>
          <%= tag.check_box class: 'form-check-input' %>
            <%= tag.text %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>
