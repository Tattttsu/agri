<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        野菜売り場
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns text-center">
      <div class="column is-5">
        <%= form_with model: @farm, local: true do |f| %>
        <%= render "farms/shared/error_messages" %>

        <div class= "field ">
          <%= f.label :name, class: "label" %>
          <p class= "control" >
            <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "名前", class: "input w-50 p-3 mb-5" %>
          </p>
        </div>

        <div class="field ">
          <%= f.label :address, class: "label" %>
          <p class = "control">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", :placeholder => "売っている場所", class: "input w-50 p-3 mb-5" %>
          </p>
        </div>

        <div class="field ">
          <%= f.label :image, class: "label" %>
          <p class = "control">
            <%= f.file_field :image, class: "input w-50 p-3 mb-5" %>
          </p>
        </div>

        <div class='form-group'>
          <%= f.collection_check_boxes(:vege_tag_ids, VegeTag.all, :id, :name) do |tag| %>
            <div class='form-check'>
              <%= tag.label { tag.check_box + tag.text } %>
            </div>
          <% end %>
        </div>




        <div class="actions">
          <%= f.submit "投稿する", class: "btn btn-primary w-50 p-3" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
