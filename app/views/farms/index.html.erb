<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">farm</th>
            <th scope="col">投稿者</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @farms.each do |farm| %>
            <tr>
              <td><%= link_to farm.id, farm_path(farm.id) %></td>
              <td><%= farm.user.email %></td>
              <td>
                <% if current_user.present? %>
                  <% if current_user.already_liked?(farm) %>
                    <%= link_to farm_likes_path(farm), method: :delete do %>
                      お気に入りを外す
                      <i class="far fa-heart"></i>
                    <% end %>
                  <% else %>
                    <%= link_to farm_likes_path(farm.id), method: :post do %>
                      お気に入りに追加
                      <i class="far fa-heart"></i>
                    <% end %>
                  <% end %>
                <% end %>
                いいね数<%= farm.likes.count %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
