<div class="search_form">
  <div class="container">
    <div class="row">
      <%= form_with url: search_path, class: "col-8", local: true, method: :get do |f| %>
        <%= f.text_field :word, size: 40 %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
