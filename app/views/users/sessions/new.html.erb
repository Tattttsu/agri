<section class="hero is-info">
  <div class="hero-body">
    <div class="container py-5">
      <h1>
        ログイン
      </h1>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="columns text-center">
      <div class="column is-5">
        <%= form_with( model: @user, url: user_session_path, local: true) do |f| %>

        <div class="field ">
          <%= f.label :email, class: "label" %>
          <p class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", class: "input w-50 p-3 mb-5" %>
          </p>
        </div>

        <div class="field">
         <%= f.label :password, class: "label" %>
        <p class="control">
          <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード", class: "input w-50 p-3 mb-5" %>
        </p>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary w-50 p-3" %>
        </div>
        <% end %>
        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      </div>
    </div>
  </div>
</section>
