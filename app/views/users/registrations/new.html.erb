<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規登録画面
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns text-center">
      <div class="column is-5">
        <%= form_with model: @user, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field ">
          <%= f.label :name, class: "label" %>
          <p class="control">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "名前", class: "input w-50 p-3 mb-5" %>
          </p>
        </div>

        <div class="field ">
          <%= f.label :email, class: "label" %>
          <p class="control">
            <%= f.text_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", class: "input w-50 p-3 mb-5" %>
          </p>
        </div>

        <div class="field">
         <%= f.label :password, class: "label" %>
        <p class="control">
          <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード", class: "input w-50 p-3 mb-5" %>
        </p>
        </div>

        <div class="field">
         <%= f.label :password_confirmation, class: "label" %>
        <p class="control">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード（確認）", class: "input w-50 p-3 mb-5" %>
        </p>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary w-50 p-3" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
