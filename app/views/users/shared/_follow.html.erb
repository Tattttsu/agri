<div class="container marketing">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <h1><%= yield(:follow_direction) %></h1>
      <table class="table text-center">
        <thead>
          <tr>
            <th>ユーザー</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td>
              <div class="user-icon m-auto">
                <%= link_to user_path(user) do %>
                  <% if user.icon.present? %>
                    <%= image_tag user.icon.url %>
                  <% else %>
                    <%= image_tag "icon" %>
                  <% end %>
                </div>
                <%= user.name %>
              <% end %>
            </td>
            <td>
              <% if user != current_user %>
                <% if user.is_followed_by?(current_user) %>
                  <%= link_to "フォロー解除",user_relationships_path(user), class: "btn btn-danger my-4", method: :delete %>
                <% else %>
                  <%= link_to "フォローする",user_relationships_path(user), class: "btn btn-primary my-4", method: :post %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
