<div class="text-center">
  <div class="form">
    <%= form_with model: @user, local: true do |f| %>
    <%= render "layouts/shared/error_messages",  object: f.object %>

    <div class= "field mt-5">
      <% f.label :name, class: "label" %>
      <%= f.text_field :name, autofocus: true, placeholder: "名前（必須）", class: "input w-50 p-3 mb-5" %>
    </div>

    <div class="field">
      <% f.label :email, class: "label" %>
      <%= f.text_field :email, autofocus: true, placeholder: "メールアドレス（必須）", class: "input w-50 p-3 mb-5" %>
    </div>

    <div class="field">
      <% f.label :password, class: "label" %>
      <%= f.password_field :password, autofocus: true, placeholder: "パスワード（必須）", class: "input w-50 p-3 mb-5" %>
    </div>

    <div class="field">
      <% f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, autofocus: true, placeholder: "パスワード（確認）", class: "input w-50 p-3 mb-5" %>
    </div>

    <div class="field">
      <%= f.label :icon, "写真の選択", class: "label" %>
      <%= f.file_field :icon, class: "input w-50 m-auto pb-5" %>
    </div>

    <div class="actions">
      <%= f.submit yield(:button_text), class: "btn btn-primary w-50 p-3" %>
    </div>
    <% end %>
  </div>
</div>
